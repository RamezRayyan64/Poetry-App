<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:id="@+id/layout_users_right_layout_info"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:background="@drawable/background_fragment_poems_items"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/layout_users_right_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/font_bold"
                android:text="@string/text_name"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/layout_users_right_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular"
                android:text="@string/text_phone"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/layout_users_right_profile_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_circle_white"
            app:civ_border_color="@color/white"
            app:civ_border_width="5dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/layout_users_right_image_view_simple_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/layout_users_right_profile_image"
            android:layout_alignTop="@id/layout_users_right_profile_image"
            android:layout_alignEnd="@id/layout_users_right_profile_image"
            android:layout_alignBottom="@id/layout_users_right_profile_image"
            android:onClick="getImageFromStorage"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_simple_profile" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/layout_users_right_button_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_circle_button_light"
            android:padding="10dp"
            android:src="@drawable/ic_vertical_dot_black" />

    </RelativeLayout>

</RelativeLayout>